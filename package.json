{
  "name": "html-table-to-markdown",
  "displayName": "HTML Table to Markdown",
  "description": "Convert HTML tables to Markdown format easily.",
  "version": "0.0.1",
  "publisher": "IdreesSamadi",
  "repository": {
    "type": "git",
    "url": "https://github.com/IdreesSamadi/html-table-to-markdown"
  },
  "bugs": {
    "url": "https://github.com/IdreesSamadi/html-table-to-markdown/issues"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.102.0"
  },  
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "html",
    "markdown",
    "table",
    "converter"
  ],
  "activationEvents": [],
  "main": "./out/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "html-table-to-markdown.convert",
        "title": "HTML table to Markdown: Convert"
      },
      {
        "command": "html-table-to-markdown.format",
        "title": "HTML table to Markdown: Format"
      }
    ],
    "keybindings": [
      {
        "command": "html-table-to-markdown.convert",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus && !editorReadonly && !inCompositeEditor"
      },
      {
        "command": "html-table-to-markdown.format",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "editorTextFocus && !editorReadonly && !inCompositeEditor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "markdown-table-prettify": "^3.6.0"
  }
}
